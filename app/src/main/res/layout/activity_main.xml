<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<TextView
    android:layout_centerHorizontal="true"
    android:textAllCaps="true"
    android:textStyle="bold"
    android:textColor="#f20"
    android:textSize="30sp"
    android:text="Đăng nhập hệ thống"
    android:id="@+id/textviewTieude"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <EditText
android:hint="Tài khoản"
android:textSize="20sp"
android:layout_marginTop="40dp"
android:layout_below="@id/textviewTieude"
android:id="@+id/edittextTaikhoan"
android:layout_width="match_parent"
android:layout_height="wrap_content" />
<EditText
android:hint="Mật khẩu"
android:textSize="20sp"
android:layout_marginTop="40dp"
android:layout_below="@id/edittextTaikhoan"
android:id="@+id/edittextMatkhau"
android:layout_width="match_parent"
android:layout_height="wrap_content" />
<Button
android:text="Đăng nhâp"
android:id="@+id/buttonDangnhap"
android:layout_marginTop="150dp"
android:layout_centerHorizontal="true"
android:layout_below="@id/edittextMatkhau"
android:layout_width="wrap_content"
android:layout_height="wrap_content" />
<TextView
android:layout_margin="10dp"
android:textSize="20dp"
android:layout_below="@id/buttonDangnhap"
android:id="@+id/textviewThongtin"
android:layout_width="wrap_content"
android:layout_height="wrap_content" />
</RelativeLayout>